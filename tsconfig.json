{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "importHelpers": false,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "**/*.e2e.ts", "**/*/test-helper"],
  "typedocOptions": { "exclude": ["**/*+(.test|.spec|.e2e).ts", "*/test-helper/**/*"] }
}
